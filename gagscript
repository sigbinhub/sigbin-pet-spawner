local Spawner = loadstring(game:HttpGet("https://raw.githubusercontent.com/ataturk123/GardenSpawner/refs/heads/main/Spawner.lua"))()
local allowedPets = {"Dragonfly", "Raccoon", "Queen Bee", "Disco Bee", "Butterfly"}
local player = game.Players.LocalPlayer

-- FULL LOADING SCREEN
local loadingGui = Instance.new("ScreenGui", player:WaitForChild("PlayerGui"))
loadingGui.Name = "SigbinHubLoading"
loadingGui.IgnoreGuiInset = true

local bg = Instance.new("Frame", loadingGui)
bg.Size = UDim2.new(1, 0, 1, 0)
bg.BackgroundColor3 = Color3.new(0, 0, 0)

local title = Instance.new("TextLabel", bg)
title.Size = UDim2.new(1, 0, 0.2, 0)
title.Position = UDim2.new(0, 0, 0.4, 0)
title.BackgroundTransparency = 1
title.Text = "SigbinHub"
title.TextColor3 = Color3.new(1, 1, 1)
title.Font = Enum.Font.GothamBold
title.TextScaled = true

local spinner = Instance.new("ImageLabel", bg)
spinner.Size = UDim2.new(0, 100, 0, 100)
spinner.Position = UDim2.new(0.5, -50, 0.65, 0)
spinner.BackgroundTransparency = 1
spinner.Image = "rbxassetid://11376002992"

local RunService = game:GetService("RunService")
local rotation = 0
local connection = RunService.RenderStepped:Connect(function(dt)
    rotation = rotation + dt * 150
    spinner.Rotation = rotation
end)

-- Use full coroutine to not freeze executor
coroutine.wrap(function()
    wait(3)
    connection:Disconnect()
    for i = 1, 20 do
        bg.BackgroundTransparency = i/20
        title.TextTransparency = i/20
        spinner.ImageTransparency = i/20
        wait(0.05)
    end
    loadingGui:Destroy()
end)()

-- MAIN UI
local gui = Instance.new("ScreenGui", player:WaitForChild("PlayerGui"))
gui.Name = "SigbinHubSpawner"
gui.ResetOnSpawn = false

local frame = Instance.new("Frame", gui)
frame.Size = UDim2.new(0.8, 0, 0.8, 0)
frame.Position = UDim2.new(0.1, 0, 0.1, 0)
frame.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
frame.Active = true
frame.Draggable = true

-- Background image always stays
local background = Instance.new("ImageLabel", frame)
background.Size = UDim2.new(1, 0, 1, 0)
background.Image = "rbxassetid://PUT_YOUR_ASSET_ID_HERE"
background.BackgroundTransparency = 1
background.ImageTransparency = 0.3
background.ZIndex = 0

local title = Instance.new("TextLabel", frame)
title.Size = UDim2.new(1, 0, 0.1, 0)
title.Position = UDim2.new(0, 0, 0, 0)
title.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
title.Text = "ðŸ¦‹ SigbinHub Spawner"
title.TextColor3 = Color3.new(1, 1, 1)
title.Font = Enum.Font.SourceSansBold
title.TextScaled = true
title.ZIndex = 2

local minimizeBtn = Instance.new("TextButton", frame)
minimizeBtn.Size = UDim2.new(0, 50, 0, 50)
minimizeBtn.Position = UDim2.new(1, -55, 0, 5)
minimizeBtn.BackgroundColor3 = Color3.fromRGB(200, 60, 60)
minimizeBtn.Text = "-"
minimizeBtn.TextColor3 = Color3.new(1, 1, 1)
minimizeBtn.Font = Enum.Font.SourceSansBold
minimizeBtn.TextScaled = true
minimizeBtn.ZIndex = 3

local content = {}

-- Create function to add UI components for easier hiding later:
local function addContent(element)
    table.insert(content, element)
end

-- Pet Label
local petLabel = Instance.new("TextLabel", frame)
petLabel.Position = UDim2.new(0.05, 0, 0.15, 0)
petLabel.Size = UDim2.new(0.4, 0, 0.07, 0)
petLabel.Text = "Select Pet:"
petLabel.TextColor3 = Color3.new(1, 1, 1)
petLabel.BackgroundTransparency = 1
petLabel.Font = Enum.Font.SourceSansBold
petLabel.TextScaled = true
petLabel.ZIndex = 2
addContent(petLabel)

local petDropdown = Instance.new("TextButton", frame)
petDropdown.Position = UDim2.new(0.05, 0, 0.23, 0)
petDropdown.Size = UDim2.new(0.9, 0, 0.07, 0)
petDropdown.BackgroundColor3 = Color3.fromRGB(70, 130, 180)
petDropdown.TextColor3 = Color3.new(1, 1, 1)
petDropdown.Font = Enum.Font.SourceSans
petDropdown.TextScaled = true
petDropdown.Text = "Choose Pet"
petDropdown.ZIndex = 2
addContent(petDropdown)

local selectedPet = nil

petDropdown.MouseButton1Click:Connect(function()
    for _,v in pairs(frame:GetChildren()) do
        if v:IsA("Frame") and v.Name == "DropdownMenu" then v:Destroy() end
    end

    local menu = Instance.new("Frame", frame)
    menu.Name = "DropdownMenu"
    menu.Position = petDropdown.Position + UDim2.new(0, 0, 0.08, 0)
    menu.Size = UDim2.new(0.9, 0, 0.3, 0)
    menu.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
    menu.ZIndex = 100
    menu.ClipsDescendants = true

    local scroll = Instance.new("ScrollingFrame", menu)
    scroll.Size = UDim2.new(1, 0, 1, 0)
    scroll.CanvasSize = UDim2.new(0, 0, 0, #allowedPets * 60)
    scroll.ScrollBarThickness = 8
    scroll.BackgroundTransparency = 1
    scroll.ZIndex = 101

    for i,pet in ipairs(allowedPets) do
        local option = Instance.new("TextButton", scroll)
        option.Size = UDim2.new(1, 0, 0, 50)
        option.Position = UDim2.new(0, 0, 0, (i-1)*55)
        option.Text = pet
        option.TextColor3 = Color3.new(1,1,1)
        option.BackgroundColor3 = Color3.fromRGB(80,80,80)
        option.Font = Enum.Font.SourceSansBold
        option.TextScaled = true
        option.ZIndex = 102

        option.MouseButton1Click:Connect(function()
            petDropdown.Text = pet
            selectedPet = pet
            menu:Destroy()
        end)
    end
end)

local kgBox = Instance.new("TextBox", frame)
kgBox.Position = UDim2.new(0.05, 0, 0.55, 0)
kgBox.Size = UDim2.new(0.4, 0, 0.07, 0)
kgBox.PlaceholderText = "KG"
kgBox.BackgroundColor3 = Color3.fromRGB(255,255,255)
kgBox.TextColor3 = Color3.new(0,0,0)
kgBox.Font = Enum.Font.SourceSans
kgBox.TextScaled = true
kgBox.ZIndex = 2
addContent(kgBox)

local ageBox = Instance.new("TextBox", frame)
ageBox.Position = UDim2.new(0.55, 0, 0.55, 0)
ageBox.Size = UDim2.new(0.4, 0, 0.07, 0)
ageBox.PlaceholderText = "Age"
ageBox.BackgroundColor3 = Color3.fromRGB(255,255,255)
ageBox.TextColor3 = Color3.new(0,0,0)
ageBox.Font = Enum.Font.SourceSans
ageBox.TextScaled = true
ageBox.ZIndex = 2
addContent(ageBox)

local spawnPetButton = Instance.new("TextButton", frame)
spawnPetButton.Position = UDim2.new(0.05, 0, 0.65, 0)
spawnPetButton.Size = UDim2.new(0.9, 0, 0.1, 0)
spawnPetButton.BackgroundColor3 = Color3.fromRGB(70, 180, 100)
spawnPetButton.Text = "Spawn Pet"
spawnPetButton.TextColor3 = Color3.new(1,1,1)
spawnPetButton.Font = Enum.Font.SourceSansBold
spawnPetButton.TextScaled = true
spawnPetButton.ZIndex = 2
addContent(spawnPetButton)

spawnPetButton.MouseButton1Click:Connect(function()
	if selectedPet then
		local kg = tonumber(kgBox.Text)
		local age = tonumber(ageBox.Text)
		if kg and age then
			Spawner.SpawnPet(selectedPet, kg, age)
		else
			warn("Enter valid KG and Age numbers")
		end
	else
		warn("No pet selected")
	end
end)

-- Minimize button toggle
minimizeBtn.MouseButton1Click:Connect(function()
	for _, v in pairs(content) do
		v.Visible = not v.Visible
	end
	minimizeBtn.Text = content[1].Visible and "-" or "+"
end)
