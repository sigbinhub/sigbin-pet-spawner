-- SigbinHub Spawner UI (Mobile Optimized)
-- Backend powered by GardenSpawner (https://github.com/ataturk123/GardenSpawner)

local Spawner = loadstring(game:HttpGet("https://raw.githubusercontent.com/ataturk123/GardenSpawner/refs/heads/main/Spawner.lua"))()

local allowedPets = {
    "Dragonfly",
    "Raccoon",
    "Queen Bee",
    "Disco Bee",
    "Butterfly"
}

local gui = Instance.new("ScreenGui", game.Players.LocalPlayer.PlayerGui)
gui.Name = "SigbinHubSpawner"
gui.ResetOnSpawn = false

local frame = Instance.new("Frame", gui)
frame.Size = UDim2.new(0.85, 0, 0.85, 0)
frame.Position = UDim2.new(0.075, 0, 0.075, 0)
frame.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
frame.Active = true
frame.Draggable = true

local title = Instance.new("TextLabel", frame)
title.Size = UDim2.new(1, 0, 0.1, 0)
title.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
title.Text = "ðŸ¦‹ SigbinHub Spawner"
title.TextColor3 = Color3.new(1, 1, 1)
title.Font = Enum.Font.SourceSansBold
title.TextScaled = true

local closeButton = Instance.new("TextButton", frame)
closeButton.Size = UDim2.new(0, 50, 0, 50)
closeButton.Position = UDim2.new(1, -55, 0, 5)
closeButton.BackgroundColor3 = Color3.fromRGB(200, 60, 60)
closeButton.Text = "X"
closeButton.TextColor3 = Color3.new(1, 1, 1)
closeButton.Font = Enum.Font.SourceSansBold
closeButton.TextScaled = true
closeButton.MouseButton1Click:Connect(function() gui:Destroy() end)

local petLabel = Instance.new("TextLabel", frame)
petLabel.Position = UDim2.new(0.05, 0, 0.15, 0)
petLabel.Size = UDim2.new(0.9, 0, 0.05, 0)
petLabel.Text = "Select Pet:"
petLabel.TextColor3 = Color3.new(1, 1, 1)
petLabel.BackgroundTransparency = 1
petLabel.Font = Enum.Font.SourceSansBold
petLabel.TextScaled = true

local petDropdown = Instance.new("TextButton", frame)
petDropdown.Position = UDim2.new(0.05, 0, 0.22, 0)
petDropdown.Size = UDim2.new(0.9, 0, 0.07, 0)
petDropdown.BackgroundColor3 = Color3.fromRGB(70, 130, 180)
petDropdown.TextColor3 = Color3.new(1, 1, 1)
petDropdown.Font = Enum.Font.SourceSans
petDropdown.TextScaled = true
petDropdown.Text = "Choose Pet"

local selectedPet = nil

petDropdown.MouseButton1Click:Connect(function()
    for _,v in pairs(frame:GetChildren()) do
        if v:IsA("Frame") and v.Name == "DropdownMenu" then v:Destroy() end
    end

    local menu = Instance.new("Frame", frame)
    menu.Name = "DropdownMenu"
    menu.Position = petDropdown.Position + UDim2.new(0, 0, 0.08, 0)
    menu.Size = UDim2.new(0.9, 0, 0.3, 0)
    menu.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
    menu.ClipsDescendants = true

    local scroll = Instance.new("ScrollingFrame", menu)
    scroll.Size = UDim2.new(1, 0, 1, 0)
    scroll.CanvasSize = UDim2.new(0, 0, 0, #allowedPets * 60)
    scroll.ScrollBarThickness = 8
    scroll.BackgroundTransparency = 1

    for i,pet in ipairs(allowedPets) do
        local option = Instance.new("TextButton", scroll)
        option.Size = UDim2.new(1, 0, 0, 50)
        option.Position = UDim2.new(0, 0, 0, (i-1)*55)
        option.Text = pet
        option.TextColor3 = Color3.new(1,1,1)
        option.BackgroundColor3 = Color3.fromRGB(80,80,80)
        option.Font = Enum.Font.SourceSansBold
        option.TextScaled = true

        option.MouseButton1Click:Connect(function()
            petDropdown.Text = pet
            selectedPet = pet
            menu:Destroy()
        end)
    end
end)

local kgLabel = Instance.new("TextLabel", frame)
kgLabel.Position = UDim2.new(0.05, 0, 0.55, 0)
kgLabel.Size = UDim2.new(0.9, 0, 0.05, 0)
kgLabel.Text = "KG:"
kgLabel.TextColor3 = Color3.new(1, 1, 1)
kgLabel.BackgroundTransparency = 1
kgLabel.Font = Enum.Font.SourceSansBold
kgLabel.TextScaled = true

local kgBox = Instance.new("TextBox", frame)
kgBox.Position = UDim2.new(0.05, 0, 0.62, 0)
kgBox.Size = UDim2.new(0.9, 0, 0.07, 0)
kgBox.PlaceholderText = "Enter KG"
kgBox.BackgroundColor3 = Color3.fromRGB(255,255,255)
kgBox.TextColor3 = Color3.new(0,0,0)
kgBox.TextScaled = true

local ageLabel = Instance.new("TextLabel", frame)
ageLabel.Position = UDim2.new(0.05, 0, 0.72, 0)
ageLabel.Size = UDim2.new(0.9, 0, 0.05, 0)
ageLabel.Text = "Age:"
ageLabel.TextColor3 = Color3.new(1, 1, 1)
ageLabel.BackgroundTransparency = 1
ageLabel.Font = Enum.Font.SourceSansBold
ageLabel.TextScaled = true

local ageBox = Instance.new("TextBox", frame)
ageBox.Position = UDim2.new(0.05, 0, 0.79, 0)
ageBox.Size = UDim2.new(0.9, 0, 0.07, 0)
ageBox.PlaceholderText = "Enter Age"
ageBox.BackgroundColor3 = Color3.fromRGB(255,255,255)
ageBox.TextColor3 = Color3.new(0,0,0)
ageBox.TextScaled = true

local spawnPetButton = Instance.new("TextButton", frame)
spawnPetButton.Position = UDim2.new(0.05, 0, 0.88, 0)
spawnPetButton.Size = UDim2.new(0.9, 0, 0.09, 0)
spawnPetButton.BackgroundColor3 = Color3.fromRGB(70, 180, 100)
spawnPetButton.Text = "Spawn Pet"
spawnPetButton.TextColor3 = Color3.new(1,1,1)
spawnPetButton.Font = Enum.Font.SourceSansBold
spawnPetButton.TextScaled = true

spawnPetButton.MouseButton1Click:Connect(function()
    if selectedPet then
        local kg = tonumber(kgBox.Text)
        local age = tonumber(ageBox.Text)
        if kg and age then
            Spawner.SpawnPet(selectedPet, kg, age)
        else
            warn("Enter valid KG and Age numbers")
        end
    else
        warn("No pet selected")
    end
end)
