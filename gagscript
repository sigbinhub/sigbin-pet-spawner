-- SigbinHub Spawner UI (Compact & Fixed)
local Spawner = loadstring(game:HttpGet("https://raw.githubusercontent.com/ataturk123/GardenSpawner/refs/heads/main/Spawner.lua"))()

local allowedPets = { "Dragonfly", "Raccoon", "Queen Bee", "Disco Bee", "Butterfly" }

local playerGui = game.Players.LocalPlayer:WaitForChild("PlayerGui")
local gui = Instance.new("ScreenGui", playerGui)
gui.Name = "SigbinHubSpawner"
gui.ResetOnSpawn = false

-- Toggle Button
local toggleButton = Instance.new("TextButton", gui)
toggleButton.Size = UDim2.new(0, 40, 0, 40)
toggleButton.Position = UDim2.new(0, 20, 0, 20)
toggleButton.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
toggleButton.Text = "ðŸ¦‹"
toggleButton.TextColor3 = Color3.new(1,1,1)
toggleButton.Font = Enum.Font.SourceSansBold
toggleButton.TextSize = 18

-- Main Frame
local frame = Instance.new("Frame", gui)
frame.Size = UDim2.new(0, 240, 0, 360)
frame.Position = UDim2.new(0.5, -120, 0.5, -180)
frame.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
frame.Visible = false
frame.Active = true
frame.Draggable = true

-- Title
local title = Instance.new("TextLabel", frame)
title.Size = UDim2.new(1, 0, 0, 35)
title.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
title.Text = "ðŸ¦‹ SigbinHub"
title.TextColor3 = Color3.new(1, 1, 1)
title.Font = Enum.Font.SourceSansBold
title.TextSize = 18

-- Close Button
local closeButton = Instance.new("TextButton", frame)
closeButton.Size = UDim2.new(0, 30, 0, 30)
closeButton.Position = UDim2.new(1, -35, 0, 2)
closeButton.BackgroundColor3 = Color3.fromRGB(200, 60, 60)
closeButton.Text = "X"
closeButton.TextColor3 = Color3.new(1, 1, 1)
closeButton.Font = Enum.Font.SourceSansBold
closeButton.TextSize = 16
closeButton.MouseButton1Click:Connect(function()
	frame.Visible = false
end)

-- Minimize Button
local minimizeButton = Instance.new("TextButton", frame)
minimizeButton.Size = UDim2.new(0, 30, 0, 30)
minimizeButton.Position = UDim2.new(1, -70, 0, 2)
minimizeButton.BackgroundColor3 = Color3.fromRGB(60, 150, 200)
minimizeButton.Text = "_"
minimizeButton.TextColor3 = Color3.new(1, 1, 1)
minimizeButton.Font = Enum.Font.SourceSansBold
minimizeButton.TextSize = 16

local minimized = false
minimizeButton.MouseButton1Click:Connect(function()
	if not minimized then
		for _, child in pairs(frame:GetChildren()) do
			if child ~= title and child ~= closeButton and child ~= minimizeButton then
				child.Visible = false
			end
		end
		frame.Size = UDim2.new(0, 240, 0, 45)
		minimized = true
	else
		for _, child in pairs(frame:GetChildren()) do
			child.Visible = true
		end
		frame.Size = UDim2.new(0, 240, 0, 360)
		minimized = false
	end
end)

toggleButton.MouseButton1Click:Connect(function()
	frame.Visible = not frame.Visible
end)

-- Pet Selection Label
local petLabel = Instance.new("TextLabel", frame)
petLabel.Position = UDim2.new(0, 10, 0, 45)
petLabel.Size = UDim2.new(0, 120, 0, 20)
petLabel.Text = "Select Pet:"
petLabel.TextColor3 = Color3.new(1, 1, 1)
petLabel.BackgroundTransparency = 1
petLabel.Font = Enum.Font.SourceSans
petLabel.TextSize = 14

-- Pet Dropdown Button
local petDropdown = Instance.new("TextButton", frame)
petDropdown.Position = UDim2.new(0, 10, 0, 70)
petDropdown.Size = UDim2.new(0, 180, 0, 28)
petDropdown.BackgroundColor3 = Color3.fromRGB(70, 130, 180)
petDropdown.TextColor3 = Color3.new(1, 1, 1)
petDropdown.Font = Enum.Font.SourceSans
petDropdown.TextSize = 14
petDropdown.Text = "Choose Pet"

local selectedPet = nil

petDropdown.MouseButton1Click:Connect(function()
	if frame:FindFirstChild("DropdownMenu") then
		frame.DropdownMenu:Destroy()
		return
	end

	local menu = Instance.new("Frame", frame)
	menu.Name = "DropdownMenu"
	menu.Position = UDim2.new(0, 10, 0, 100)
	menu.Size = UDim2.new(0, 180, 0, 110)
	menu.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
	menu.BorderSizePixel = 0

	local scroll = Instance.new("ScrollingFrame", menu)
	scroll.Size = UDim2.new(1, 0, 1, 0)
	scroll.CanvasSize = UDim2.new(0, 0, 0, #allowedPets * 30)
	scroll.ScrollBarThickness = 6
	scroll.BackgroundTransparency = 1

	for i, pet in ipairs(allowedPets) do
		local option = Instance.new("TextButton", scroll)
		option.Size = UDim2.new(1, 0, 0, 25)
		option.Position = UDim2.new(0, 0, 0, (i-1)*30)
		option.Text = pet
		option.TextColor3 = Color3.new(1,1,1)
		option.BackgroundColor3 = Color3.fromRGB(80,80,80)
		option.Font = Enum.Font.SourceSansBold
		option.TextSize = 14

		option.MouseButton1Click:Connect(function()
			petDropdown.Text = pet
			selectedPet = pet
			menu:Destroy()
		end)
	end
end)

-- Weight Label
local kgLabel = Instance.new("TextLabel", frame)
kgLabel.Position = UDim2.new(0.5, -110, 0, 220)
kgLabel.Size = UDim2.new(0, 220, 0, 30)
kgLabel.Text = "weight\nkg"
kgLabel.TextColor3 = Color3.new(1, 1, 1)
kgLabel.BackgroundTransparency = 1
kgLabel.Font = Enum.Font.SourceSansBold
kgLabel.TextSize = 22
kgLabel.TextWrapped = true
kgLabel.TextXAlignment = Enum.TextXAlignment.Center
kgLabel.TextYAlignment = Enum.TextYAlignment.Center

local kgBox = Instance.new("TextBox", frame)
kgBox.Position = UDim2.new(0.5, -110, 0, 255)
kgBox.Size = UDim2.new(0, 220, 0, 30)
kgBox.PlaceholderText = "Enter KG"
kgBox.BackgroundColor3 = Color3.fromRGB(255,255,255)
kgBox.TextColor3 = Color3.new(0,0,0)
kgBox.Font = Enum.Font.SourceSans
kgBox.TextSize = 16
kgBox.TextXAlignment = Enum.TextXAlignment.Center

-- Age Label
local ageLabel = Instance.new("TextLabel", frame)
ageLabel.Position = UDim2.new(0.5, -110, 0, 290)
ageLabel.Size = UDim2.new(0, 220, 0, 30)
ageLabel.Text = "age\nyears"
ageLabel.TextColor3 = Color3.new(1, 1, 1)
ageLabel.BackgroundTransparency = 1
ageLabel.Font = Enum.Font.SourceSansBold
ageLabel.TextSize = 22
ageLabel.TextWrapped = true
ageLabel.TextXAlignment = Enum.TextXAlignment.Center
ageLabel.TextYAlignment = Enum.TextYAlignment.Center

local ageBox = Instance.new("TextBox", frame)
ageBox.Position = UDim2.new(0.5, -110, 0, 325)
ageBox.Size = UDim2.new(0, 220, 0, 30)
ageBox.PlaceholderText = "Enter Age"
ageBox.BackgroundColor3 = Color3.fromRGB(255,255,255)
ageBox.TextColor3 = Color3.new(0,0,0)
ageBox.Font = Enum.Font.SourceSans
ageBox.TextSize = 16
ageBox.TextXAlignment = Enum.TextXAlignment.Center

-- Spawn Pet Button
local spawnPetButton = Instance.new("TextButton", frame)
spawnPetButton.Position = UDim2.new(0.5, -90, 0, 360)
spawnPetButton.Size = UDim2.new(0, 180, 0, 35)
spawnPetButton.BackgroundColor3 = Color3.fromRGB(70, 180, 100)
spawnPetButton.Text = "Spawn Pet"
spawnPetButton.TextColor3 = Color3.new(1,1,1)
spawnPetButton.Font = Enum.Font.SourceSansBold
spawnPetButton.TextSize = 16

spawnPetButton.MouseButton1Click:Connect(function()
	if not selectedPet then
		warn("Please select a pet!")
		return
	end
	local kg = tonumber(kgBox.Text)
	local age = tonumber(ageBox.Text)
	if not kg or not age then
		warn("Enter valid KG and Age numbers!")
		return
	end
	Spawner.SpawnPet(selectedPet, kg, age)
end)
